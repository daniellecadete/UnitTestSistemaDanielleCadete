node {
    stage('Build') {
      node() {
        echo 'Master'
        sh 'hostname'
        deleteDir()
        checkout scm
        sh 'echo "res" > result'
        stash includes: '**/result', name: 'app'
        
      }
     }  
      
    stage("Test") {
      node('slave') {
        echo 'Slave'
        sh 'hostname'
        unstash 'app'
        sh 'cat result'
        sh "mvn clean install"
	//echo 'Testes realizados!'
      }
    }     
}
